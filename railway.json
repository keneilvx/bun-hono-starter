{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["bun install"]
        },
        "build": {
          "cmds": ["bun run build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bun run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10000,
    "restartPolicy": "ON_FAILURE"
  }
}